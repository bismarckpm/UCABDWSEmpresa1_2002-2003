@using ServicesDeskUCAB.DTO;
@model Tuple<ModeloJerarquicoDTO, List<SelectListItem>>
@{
    ViewData["Title"] = "Gestion Modelo Jerarquico";
}

<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous" />
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>

<div class="modal fade" id="popUpEditar" tabindex="-1" role="dialog" aria-labelledby="popUpEditarTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Editar Modelo Jerarquico</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close"onclick="location.href='@Url.Action("GestionMJerarquico", "ModeloJerarquico")'">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
          
            @using (Html.BeginForm("ActualizarModeloJerarquico", "modeloJerarquico", FormMethod.Post))
            {
                <div class="modal-body">
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.Item1.id, new { @Value = Model.Item1.id, @type="hidden"})
                        <span>Modelo Jerarquico: </span>
                        @Html.TextBoxFor(m => m.Item1.nombre, new { @Value = Model.Item1.nombre,@Class = "form-control" })
                    </div>
                    <div class="form-group">
                        <span>Categoria: </span> @Html.DropDownListFor(m => m.Item1.categoriaId, Model.Item2,"Seleccione una categorï¿½a",new {@Class = "form-select"})
                            @Html.ValidationMessageFor(m => m.Item1.categoriaId, null, new {@Class = "text-danger"})
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" onclick="location.href='@Url.Action("GestionMJerarquico", "ModeloJerarquico")'">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Editar</button>
                </div>
            }
        </div>
    </div>
</div>