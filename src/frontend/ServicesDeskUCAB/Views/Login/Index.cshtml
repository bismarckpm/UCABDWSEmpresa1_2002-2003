@model ServicesDeskUCAB.DTO.UserLoginDTO

<div class="col-md-12 col-sm-12">
            <div class="contenedorlogin">
         <h2 class="titulo">SERVICES DESK UCAB</h2>
               <form asp-action="Index"  method="post">
                  <div class="form-group">
                     <label>E-mail</label>
                     <input type="email" name="email" class="form-control" placeholder="Email">
                  </div>
                  <div class="form-group">
                     <label>contrasena</label>
                     <input type="password" name="Password" class="form-control" placeholder="contrasena">
                  </div>
                
                  <div class="botones">
                  <button  type="submit"  class="btn btn-success">Entrar</button>
                  <a class="btn btn-info" asp-area="" asp-controller="Login" asp-action="Registrarse">Registrarse</a>
                  <a class="btn btn-link" asp-area="" asp-controller="Login" asp-action="OlvidoContrasena">Olvido contrasena?</a>
                  
                  </div>
               </form>
            </div>
         </div> 
@if (@ViewBag.Result != null)
{
   <div class="alert alert-danger" role="alert">
 @ViewBag.Result
</div>

}


