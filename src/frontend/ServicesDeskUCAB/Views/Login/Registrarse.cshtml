    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.10/jquery.mask.js"></script>

}
<div class="col-md-12 col-sm-12">
            <div class="contenedorlogin">
               <form asp-action="Registrarse"  method="post">
                  <div class="form-group">
                     <label>Nombre</label>
                     <input type="text" name="nombre" class="form-control" placeholder="nombre">
                      @Html.ValidationMessageFor(m => m.nombre ,null, new { @class = "text-danger" })
                  </div>
                  <div class="form-group">
                     <label>E-mail</label>
                     <input type="email" name="email" class="form-control" placeholder="Email">
                      @Html.ValidationMessageFor(m => m.Email ,null, new { @class = "text-danger" })
                  </div>
                  <div class="form-group">
                     <label>Contrase�a</label>
                     <input type="password" name="Password" class="form-control" placeholder="Contrasena">
                     @Html.ValidationMessageFor(m => m.Password ,null, new { @class = "text-danger" })
                  </div>
                  <div class="form-group">
                     <label>Repita su contrase�a</label>
                     <input type="password" name="confirmationpassword" class="form-control" placeholder="Repita su contrase�a">
                     @Html.ValidationMessageFor(m => m.confirmationpassword ,null, new { @class = "text-danger" })
                  </div>
                  <div class="botones">
                    <button  type="submit"  class="btn btn-success">Entrar</button>
                    <a class="btn btn-danger" asp-area="" asp-controller="Login" asp-action="Index">Cancelar</a>
                  </div>
               </form>
                <p>@ViewBag.Error</p>  
            </div>
         </div> 



