@model ServicesDeskUCAB.DTO.ResetPasswordDTO

<div class="main">
         <div class="col-md-12 col-sm-12">
            <div class="contenedorlogin">
               <form asp-action="ResetPassword"  method="post">
                  <div class="form-group">
                     <label>Token de reset</label>
                     <input type="text" name="token" class="form-control" placeholder="Token" required>
                  </div>
                  <div class="form-group">
                     <label>Contraseña</label>
                     <input type="password" name="Password" class="form-control" placeholder="Contrasena">
                    @Html.ValidationMessageFor(m => m.Password ,null, new { @class = "text-danger" })
                  </div>
                  <div class="form-group">
                     <label>Repita su contrasena</label>
                     <input type="password" name="confirmationpassword" class="form-control" placeholder="Repita su contrasena">
                    @Html.ValidationMessageFor(m => m.confirmationpassword ,null, new { @class = "text-danger" })
                  </div>
                  <div class="botones">
                  <button type="submit" class="btn btn-success">Cambiar clave</button>
                  </div>
               </form>
            </div>
         </div>
      </div>