@model ServicesDeskUCAB.DTO.ResetPasswordDTO

<div class="main">
         <div class="col-md-12 col-sm-12">
            <div class="contenedorlogin">
               <form asp-action="ResetPassword"  method="post">
                  <div class="form-group">
                     <label>Token de reset</label>
                     <input type="text" name="token" class="form-control" placeholder="Token">
                  </div>
                  <div class="form-group">
                     <label>contrasena</label>
                     <input type="password" name="Password" class="form-control" placeholder="contrasena">
                  </div>
                  <div class="form-group">
                     <label>Repita su contrasena</label>
                     <input type="password" name="confirmationpassword" class="form-control" placeholder="repita su contrasena">
                  </div>
                  <div class="botones">
                  <button type="submit" class="btn btn-success">Cambiar clave</button>
                  </div>
                  @if (@ViewBag.Result != null)
{
   <div class="alert alert-danger" role="alert">
 @ViewBag.Result
</div>

}
               </form>
            </div>
         </div>
      </div>