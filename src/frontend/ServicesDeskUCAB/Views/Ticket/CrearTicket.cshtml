@model dynamic
@using ServicesDeskUCAB.DTO
@section scripts{
}
@{
    ViewData["Title"] = "Gestion Tickets";
}

            <form asp-action="CrearTicket"  method="post">
            <div class="form-group">
                <label for="categoria">Categoria</label>
                <select class="form-control" id="categoriaid" name="categoriaid">
                    @foreach (CategoriaDTO categoria in Model.categoria)

                    {
                        <option value="@categoria.id">@categoria.nombre</option>

                    }
                </select>
            </div>

            <div class="form-group">
                <label for="categoria">Departamento</label>
                <select class="form-control" id="Departamentoid" name="Departamentoid">
                    @foreach (DepartamentoDTO dep in Model.Departamentos)

                    {
                        <option value="@dep.id">@dep.nombre</option>

                    }
                </select>

            </div>
            <div class="form-group">
                <label>Nombre</label>
                <input type="text" name="nombre" class="form-control" placeholder="Nombre del ticket">
            </div>
            <div class="form-group">
                <label>Descripcion</label>
                <input type="text" name="descripcion" class="form-control"
                    placeholder="Descripcion del ticket">
            </div>
            <div class="botones">
                <button type="submit" class="btn btn-success">Crear</button>
            </div>
        </form>
       