@model Tuple<List<PrioridadDTO>, List<CategoriaDTO>,TicketCDTO >
@using ServicesDeskUCAB.DTO
@section scripts{
}

@{
    ViewData["Title"] = "Editar Ticket";
}

<!-- IMPORTACIONES DE LIBRERIAS -->
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous" />
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>


<!-- VENTANA EMERGENTE "MODAL" -->
<div class="modal fade" id="popUpEditar" tabindex="-1" role="dialog" aria-labelledby="popUpEditarTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Editar Ticket</h5>
            </div>
       <form asp-action="VentanaEditarTicket" method="post">
            <div class="form-group">
                <select class="form-control" id="id2" name="id2">
                    
                        <option value="@Model.Item3.id"></option>
                </select>
                
                 <select class="form-control" id="idasignad" name="idasignad">
                   
                        <option value="@Model.Item3.id"></option>

                    
                </select>
                 <select class="form-control" id="idestado" name="idestado">
                    
                        <option value="@Model.Item3.id"></option>

                  
                </select>
                
                 <label for="prioridad">Prioridad</label>
                 <select class="form-control" id="prioridad" name="prioridad">
                    @foreach (PrioridadDTO prioridad in Model.Item1)

                    {
                        <option value="@prioridad.id">@prioridad.nombre</option>

                    }
                </select>
            </div>

            <div class="form-group">
                <label for="categoria">categoria</label>
                <select class="form-control" id="categoria" name="categoria">
                    @foreach (CategoriaDTO usuario in Model.Item2)

                    {
                        <option value="@usuario.id">@usuario.nombre</option>

                    }
                </select>

            </div>
            <div class="form-group">
                <label>Nombre</label>
                <input type="text" name="nombre" class="form-control" placeholder="Nombre del ticket">
            </div>
            <div class="form-group">
                <label>Descripcion</label>
                <input type="text" name="descripcion" class="form-control"
                    placeholder="Descripcion del ticket">
            </div>
            <div class="botones">
                <button type="submit" class="btn btn-success">Editar</button>
            </div>
                              @if (@ViewBag.Result != null)
{
   <div class="alert alert-danger" role="alert">
 @ViewBag.Result
</div>

}
        </form>
               
            
        </div>
    </div>
</div>